<%= erb :_header %>

<%if @tweets%>
  <h3>Tweets de: <%=@name%></h3>
  <h4>Regresado por: <span id="method"><%=@method%></span></h4>
  <%if @wait%>
  <div class="spinner"></div>
  <%end%>
  <div class= "tweets_area"><%= erb :_tweets %></div>
<%else%>
  <div class="fail"><p>Unregistered Username</p></div>
<%end%>
<%= erb :_return %>